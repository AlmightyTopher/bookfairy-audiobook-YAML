# BookFairy Docker Orchestration Environment Variables
# Copy this file to .env and configure with your actual values

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id

# Service Ports
DISCORD_BOT_PORT=8080
LAZYLIBRARIAN_PORT=5299
PROWLARR_PORT=9696
QBITTORRENT_PORT=8081
AUDIOBOOKSHELF_PORT=13378
LM_STUDIO_PORT=1234
REDIS_PORT=6379

# External API Keys
HARDCOVER_API_KEY=your_hardcover_api_key
HARDCOVER_API_URL=https://api.hardcover.app

# Database Configuration
REDIS_PASSWORD=your_redis_password
POSTGRES_USER=bookfairy
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=bookfairy

# Storage Paths (Docker volumes)
DOWNLOADS_PATH=./data/downloads
LIBRARY_PATH=./data/library
CONFIG_PATH=./data/config
CACHE_PATH=./data/cache

# Performance Settings
CONTAINER_MEMORY_LIMIT=2g
LM_STUDIO_GPU_MEMORY=8g
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# Security Settings
NETWORK_SUBNET=172.20.0.0/16
ENABLE_HTTPS=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Governance Settings
AUDIT_LENS_ENABLED=true
RISK_ASSESSMENT_ENABLED=true
VALIDATION_PROTOCOL_STRICT=true
GOVERNANCE_REPORT_INTERVAL=1h

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Container Resource Limits
DISCORD_BOT_CPU_LIMIT=1
DISCORD_BOT_MEMORY_LIMIT=512m
LAZYLIBRARIAN_CPU_LIMIT=2
LAZYLIBRARIAN_MEMORY_LIMIT=1g
PROWLARR_CPU_LIMIT=1
PROWLARR_MEMORY_LIMIT=512m
QBITTORRENT_CPU_LIMIT=4
QBITTORRENT_MEMORY_LIMIT=2g
AUDIOBOOKSHELF_CPU_LIMIT=2
AUDIOBOOKSHELF_MEMORY_LIMIT=1g
LM_STUDIO_CPU_LIMIT=8
LM_STUDIO_MEMORY_LIMIT=16g
REDIS_CPU_LIMIT=1
REDIS_MEMORY_LIMIT=512m